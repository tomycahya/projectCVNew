<mvc:View
    controllerName="projectcv.controller.cv"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified"
    height="100%"
>
    <Page
        id="page"
        title="{i18n>title}"
        showHeader="false"
    >
        <content>
            <f:DynamicPage
                id="dynamicPage"
                fitContent="true"
            >
                <f:header>
                    <f:DynamicPageHeader
                        id="dynamicPageHeader"
                        class="sapUiResponsivePadding--header"
                        pinnable="true"
                    >
                        <ObjectHeader
                            icon="../image/Foto.jpg"
                            iconDensityAware="false"
                            iconAlt="Denise Smith"
                            imageShape="Circle"
                            responsive="true"
                            title="{cvModel>/name}"
                            id="object"
                            intro="{cvModel>/interests}"
                            class="sapUiResponsivePadding--header"
                        >
                            <statuses>
                                <!-- <ObjectStatus id="_IDGenObjectStatus" title="Github" text="{cvModel>/github}" state="Success"></ObjectStatus> -->
                            </statuses>
                            <attributes>
                                <ObjectAttribute
                                    id="oattr"
                                    title="Email"
                                    text="{cvModel>/email}"
                                    active="true"
                                />
                                <ObjectAttribute
                                    id="oattr2"
                                    title="Phone"
                                    text="{cvModel>/phone}"
                                />
                                <ObjectAttribute
                                    id="oattr3"
                                    title="Address"
                                    text="{cvModel>/address}"
                                />
                                <!-- <ObjectAttribute
                                    id="oattr4"
                                    title="Github"
                                    text="{cvModel>/github}"
                                /> -->
                            </attributes>
                        </ObjectHeader>
                    </f:DynamicPageHeader>
                </f:header>

                <f:content>
                    <Wizard
                        id="CreateProductWizard"
                        class="sapUiResponsivePadding--header sapUiResponsivePadding--content"
                        complete="wizardCompletedHandler"
                        width="auto"
                    >
                        <WizardStep
                            id="ProductTypeStep"
                            title="Summary"
                            validated="true"
                        >
                            <MessageStrip
                                id="_IDGenMessageStrip"
                                class="sapUiSmallMarginBottom"
                                text="Summary of my CV"
                                showIcon="true"
                            />
                            <Text
                                id="_IDGenText"
                                class="sapUiSmallMarginBottom"
                                text="{cvModel>/summary}"
                            />
                        </WizardStep>
                        <WizardStep
                            id="ProductInfoStep"
                            validated="true"
                            title="Experience"
                            activate="additionalInfoValidation"
                        >
                            <MessageStrip
                                id="_IDGenMessageStrip1"
                                class="sapUiSmallMarginBottom"
                                text="Details about my experience"
                                showIcon="true"
                            />
                            <List
                                id="_IDGenList"
                                mode="None"
                                items="{cvModel>/experience}"
                                enableBusyIndicator="true"
                            >
                                <StandardListItem
                                    id="_IDGenStandardListItem"
                                    title="{cvModel>jobTitle}"
                                    info="{cvModel>company} ({cvModel>duration})"
                                    infoState="Information"
                                    description="{cvModel>responsibilities}"
                                    type="Inactive"
                                    wrapping="true"
                                />
                            </List>
                        </WizardStep>
                        <WizardStep
                            id="OptionalInfoStep"
                            validated="true"
                            activate="optionalStepActivation"
                            title="Education"
                        >
                            <MessageStrip
                                id="_IDGenMessageStrip3"
                                class="sapUiSmallMarginBottom"
                                text="Details about my Education"
                                showIcon="true"
                            />
                            <List
                                id="_IDGenList1"
                                mode="None"
                                items="{cvModel>/education}"
                                enableBusyIndicator="true"
                            >
                                <StandardListItem
                                    id="_IDGenStandardListItem2"
                                    title="{cvModel>degree}"
                                    info="{cvModel>year}"
                                    infoState="Information"
                                    description="{cvModel>institution}"
                                    type="Inactive"
                                    wrapping="true"
                                />
                            </List>
                        </WizardStep>
                        <WizardStep
                            id="PricingStep"
                            activate="Certifications"
                            validated="true"
                            title="Certifications"
                        >
                            <MessageStrip
                                id="_IDGenMessageStrip4"
                                class="sapUiSmallMarginBottom"
                                text="Details about my Certifications"
                                showIcon="true"
                            />
                            <List
                                id="_IDGenList2"
                                mode="None"
                                items="{cvModel>/certificate}"
                                enableBusyIndicator="true"
                            >
                                <StandardListItem
                                    id="_IDGenStandardListItem4"
                                    title="{cvModel>title}"
                                    info="{cvModel>year}"
                                    infoState="Information"
                                    description="{cvModel>description}"
                                    type="Inactive"
                                    wrapping="true"
                                />
                            </List>
                        </WizardStep>

                        <WizardStep
                            id="PricingStep2"
                            activate="skill"
                            complete="pricingComplete"
                            validated="true"
                            title="Skills"
                        >
                            <MessageStrip
                                id="_IDGenMessageStrip5"
                                class="sapUiSmallMarginBottom"
                                text="Details about my Skills"
                                showIcon="true"
                            />
                            <List
                                id="_IDGenList3"
                                mode="None"
                                items="{cvModel>/skills}"
                                enableBusyIndicator="true"
                            >
                                <StandardListItem
                                    id="_IDGenStandardListItem5"
                                    title="{cvModel>name}"
                                    type="Inactive"
                                    wrapping="true"
                                />
                            </List>
                        </WizardStep>
                    </Wizard>
                </f:content>
            </f:DynamicPage>
        </content>
    </Page>
</mvc:View>
